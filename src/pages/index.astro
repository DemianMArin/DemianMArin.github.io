---
import Layout from '~/layouts/PageLayout.astro';
import { getPermalink } from '~/utils/permalinks';
import MyGridIndex from '~/components/widgets/MyGridIndex.astro';

import uuvPoolVideo from '~/assets/images/grid_portfolio/uuv_pool.mp4';
import xarmVideo from '~/assets/images/grid_portfolio/xarm_following_marker.mp4';
import stmAutonomousVideo from '~/assets/images/grid_portfolio/stm_autonomous_vehicle.mp4';
import fpgaGame from '~/assets/images/grid_portfolio/game_FPGA.mp4';
import passiveFilter from '~/assets/images/grid_portfolio/passive_filter.mp4';
import uuvAboveWaterVideo from '~/assets/images/grid_portfolio/above_water_testing.mp4';
import stmPIDVideo from '~/assets/images/grid_portfolio/stm_pid_car.mp4';
import hmiVideo from '~/assets/images/grid_portfolio/hmi.mp4';
import teachingAIVideo from '~/assets/images/grid_portfolio/teaching_ai.mp4';
import stmWaterPumpVideo from '~/assets/images/grid_portfolio/stm_water_pump.mp4';

const metadata = {
  title: "Demian's Portfolio",
  ignoreTitleTemplate: false,
};

const portfolioItems = [
  {
    video: { src: hmiVideo },
    href: getPermalink('/grid_pages/hmi'),
    title: 'HMI - SLAM in LCD with FPGA',
  },
  {
    //image: { src: '~/assets/images/grid_portfolio/uuv_setup.png', alt: 'Underwater vehicle setup project' },
    video: { src: uuvAboveWaterVideo },
    href: getPermalink('/grid_pages/uuv'),
    title: 'UUV Above Water Testing',
  },
  {
    video: { src: fpgaGame },
    href: getPermalink('/grid_pages/game_fpga'),
    title: 'FPGA Game',
  },
  {
    //image: { src: '~/assets/images/grid_portfolio/stm_autonomous_vehicle.png', alt: 'STM autonomous vehicle project' },
    video: { src: stmAutonomousVideo },
    href: getPermalink('/grid_pages/stmAutonomous'),
    title: 'STM Autonomous Vehicle',
  },
  {
    //image: { src: '~/assets/images/grid_portfolio/stm_line_follower.png', alt: 'STM line follower project' },
    video: { src: stmPIDVideo },
    href: getPermalink('/grid_pages/pid_car'),
    title: 'STM PID Line Follower',
  },
  {
    image: { src: '~/assets/images/grid_portfolio/math_problem_data_test.jpg', alt: 'Math problem' },
    href: getPermalink('/grid_pages/mathproblem'),
    title: 'Math Problem',
  },
  {
    video: { src: teachingAIVideo },
    href: getPermalink('/grid_pages/teachingai'),
    title: 'Teacher AI',
  },
  {
    // image: { src: '~/assets/images/grid_portfolio/uuv_pool.png', alt: 'Underwater vehicle project' },
    video: { src: uuvPoolVideo },
    href: getPermalink('/grid_pages/uuv'),
    title: 'UUV Pool',
  },
  {
    //image: { src: '~/assets/images/grid_portfolio/high_pass_filter.png', alt: 'High pass filter project' },
    video: { src: passiveFilter },
    title: 'High Pass Filter',
  },
  {
    //image: { src: '~/assets/images/grid_portfolio/water_pump_setup.png', alt: 'Water pump setup project' },
    video: { src: stmWaterPumpVideo },
    title: 'Water Pump Setup',
  },
  {
    //image: { src: '~/assets/images/grid_portfolio/xarm_setup.png', alt: 'xArm robotic arm setup project' },
    video: { src: xarmVideo },
    href: getPermalink('/grid_pages/xarm'),
    title: 'xArm Setup',
  },
];
---

<Layout metadata={metadata}>
  <MyGridIndex
    title="My Portfolio"
    subtitle="A collection of my engineering projects"
    items={portfolioItems}
    showHeader={false}
    showTitles={false}
  >
    <MyGridIndex />
  </MyGridIndex>
</Layout>
