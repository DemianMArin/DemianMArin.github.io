---
import { getEntry, render } from 'astro:content';
import Layout from '~/layouts/PageLayout.astro';

// Get the teachingai content from the grid collection
const teachingaiContent = await getEntry('grid', 'teachingai');
if (!teachingaiContent) {
  throw new Error('Teaching AI content not found');
}

const { Content } = await render(teachingaiContent);

// Page metadata
const metadata = {
  title: teachingaiContent.data.title,
  ignoreTitleTemplate: false,
};

// Layout variables (easily configurable)
const containerWidth = 'max-w-3xl';
const contentWidth = 'max-w-4xl';

// Typography variables
const proseSize = 'prose-base';
const bodyTextSize = 'text-sm';
---

<Layout metadata={metadata}>
  <section class={`px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 ${containerWidth}`}>
    <div
      class={`${contentWidth} mx-auto prose ${proseSize} dark:prose-invert 
      prose-headings:font-heading prose-headings:leading-tighter 
      prose-headings:tracking-tighter prose-headings:font-bold 
      prose-a:text-primary dark:prose-a:text-blue-400 
      prose-img:rounded-md prose-img:shadow-lg max-w-none 
      ${bodyTextSize} text-justify`}
    >
      <Content />
    </div>
  </section>
</Layout>
