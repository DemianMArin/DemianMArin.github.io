---
import { getEntry, render } from 'astro:content';
import Layout from '~/layouts/PageLayout.astro';

// Get the HMI content from the grid collection
const hmiContent = await getEntry('grid', 'hmi');
if (!hmiContent) {
  throw new Error('HMI content not found');
}

const { Content } = await render(hmiContent);

// Page metadata
const metadata = {
  title: hmiContent.data.title,
  ignoreTitleTemplate: false,
};

// Layout variables (easily configurable)
const containerWidth = 'max-w-2xl';
const contentWidth = 'max-w-4xl';

// Typography variables
const proseSize = 'prose-base';
const bodyTextSize = 'text-xs';
---

<Layout metadata={metadata}>
  <section class={`px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 ${containerWidth}`}>
    <div
      class={`${contentWidth} mx-auto prose ${proseSize} dark:prose-invert prose-headings:font-bold prose-a:text-primary max-w-none ${bodyTextSize} text-justify`}
    >
      <Content />
    </div>
  </section>
</Layout>
